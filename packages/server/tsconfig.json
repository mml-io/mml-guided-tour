{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noEmit": true,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
